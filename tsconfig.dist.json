{
  "extends": "./tsconfig.settings",
  "include": ["./exports", "./src", "./typings"],
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/__workshop__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@sanity/ui/theme": ["./exports/theme.ts"],
      "@sanity/ui": ["./exports"]
    }
  }
}
